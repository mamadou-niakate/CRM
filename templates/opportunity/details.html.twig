{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-body">
                <h2 class="card-title">{{ opportunity.getName() }}</h2>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h4 class="col">Status : {{ opportunity.status }}</h4> <br/>
                    <h4 class="col">Probabilité de Reussite : {{ opportunity.probability }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Nom Prospect : {{ opportunity.lead }}</h4> <br/>
                    <h4 class="col"> Nom Compte : {{ opportunity.account }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Assigné à : {{ opportunity.getAssignedTo() }}</h4>
                </li>
            </ul>
            <div class="card-body">
                <button type="button" class="btn btn-primary"><a href="{{ path('opportunity') }}" class="card-link" style="color: #f5f7ff">Retour</a></button>
                <button type="button" class="btn btn-primary"><a href="{{ path('remove_opportunity', {id:opportunity.id}) }}" style="color: #f5f7ff" class="card-link">Supprimer</a></button>
            </div>
        </div>
    </div>
{% endblock %}
