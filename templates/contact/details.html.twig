{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-body">
                <h2 class="card-title">{{ contact.getFirstName() }} {{ contact.getLastName() }}</h2>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h4 class="col">Téléphone : {{ contact.phone }}</h4> <br/>
                    <h4 class="col">Email : {{ contact.email }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Fonction : {{ contact.function }}</h4> <br/>
                    <h4 class="col"> Nom Compte : {{ contact.account }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Assigné à : {{ contact.getAssignedTo() }}</h4>
                </li>
            </ul>
            <div class="card-body">
                <button type="button" class="btn btn-primary"><a href="{{ path('contact') }}" class="card-link" style="color: #f5f7ff">Retour</a></button>
                <button type="button" class="btn btn-primary"><a href="{{ path('remove_contact', {id:contact.id}) }}" style="color: #f5f7ff" class="card-link">Supprimer</a></button>
            </div>
        </div>
    </div>
{% endblock %}
