{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-body">
                <h2 class="card-title text-capitalize">{{ lead.getFirstName() }} {{ lead.getLastName() }}</h2>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h4 class="col"><span class="font-weight-bold">Téléphone :</span> {{ lead.phone }}</h4> <br/>
                    <h4 class="col"><span class="font-weight-bold">Email :</span> {{ lead.email }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> <span class="font-weight-bold">Website :</span> <a href="{{ lead.website }}" target="_blank">{{ lead.website }}</a></h4> <br/>
                    <h4 class="col"> <span class="font-weight-bold">Industry :</span> {{ lead.industry }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> <span class="font-weight-bold">Adresse :</span> {{ lead.street }} {{ lead.zipcode }} {{ lead.city }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> <span class="font-weight-bold">Status :</span> {{ lead.status }}</h4> <br/>
                    <h4 class="col"> <span class="font-weight-bold">Assigné à :</span> {{ lead.getAssignedTo() }}</h4>
                </li>
            </ul>
            <div class="card-body">
                <button type="button" class="btn btn-info"><a href="{{ path('lead') }}" class="card-link" style="color: #f5f7ff">Retour</a></button>
                <button type="button" class="btn btn-danger"><a href="{{ path('remove_lead', {id:lead.id}) }}" style="color: #f5f7ff" class="card-link">Supprimer</a></button>
            </div>
        </div>
    </div>
{% endblock %}
