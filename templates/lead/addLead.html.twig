{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col ml-md-auto">
            <div class="card bg-light mb-3 mt-5">
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="card-header mb-3"><span class="display-4">Ajouter un Prospect</span></div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.first_name, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.last_name, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.website, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.industry, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.street, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.zipcode, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.assigned_to, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form_group">
                        <div class="col-md-12 mb-3"> {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }} </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                            <button type="submit" class="btn btn-info">
                                <i class="fa fa-btn fa-user"></i> Register
                            </button>

                            <a href="{{ path('lead') }}" style="color: #f5f7ff; text-decoration: none">
                                <button type="button" class="btn btn-danger">
                                    <i class="far fa-times-circle"></i> Annuler
                                </button>
                            </a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
