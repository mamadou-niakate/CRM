{% extends 'base.html.twig' %}

{% block title %} Details {% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card shadow-none p-3 mb-5 bg-light rounded">
            <div class="card-body">
                <h2 class="card-title">{{ account.getAccountName()}}</h2>
                <!--p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p-->
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">
                    <h4 class="col">Téléphone : {{ account.getBillingCity() }}</h4> <br/>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Website : {{ account.website }}</h4> <br/>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Adresse : {{ account.getOfficePhone() }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col"> Assigné à : {{ account.getAssignedTo() }}</h4>
                </li>
                <li class="list-group-item">
                    <h4 class="col">
                        Contact{{ contacts|length > 1 ? 's':'' }} :
                        {% for contact in contacts %}
                            <span><a href="{{ path('contact_details', {id:contact.id}) }}">{{ contact.getFirstName() }} {{ contact.getLastName() }}</a></span>
                        {% endfor %}
                    </h4>
                </li>
            </ul>
            <div class="card-body">
                <button type="button" class="btn btn-primary"><a href="{{ path('account') }}" class="card-link" style="color: #f5f7ff">Retour</a></button>
                <button type="button" class="btn btn-primary"><a href="{{ path('remove_account', {id:account.id}) }}" style="color: #f5f7ff" class="card-link">Supprimer</a></button>
            </div>
        </div>
    </div>
{% endblock %}
